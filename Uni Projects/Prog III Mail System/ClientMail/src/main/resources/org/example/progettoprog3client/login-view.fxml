<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" stylesheets="@style.css" prefHeight="500.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/19.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.progettoprog3client.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Benvenuto" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="30.0" />
        </font>
        <VBox.margin>
            <Insets bottom="25.0" />
        </VBox.margin>
    </Label>
      <TextField fx:id="loginInsert" maxWidth="250.0" minWidth="200.0" prefHeight="30.0" promptText="Inserire email" style="-fx-border-radius: 15;">
      <VBox.margin>
         <Insets bottom="30.0" />
      </VBox.margin>
   </TextField>

      <Label fx:id="errorMessage" text="Email non trovata. Riprova" textFill="RED" visible="false">
          <font>
              <Font size="9.0" />
          </font>
          <VBox.margin>
              <Insets bottom="30.0" top="-48.0" />
          </VBox.margin>
      </Label>
   <Button onAction="#onLoginClick" styleClass="button" style="-fx-border-radius: 50; -fx-cursor: hand;" text="Login">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets top="-10.0" />
      </VBox.margin>
   </Button>
</VBox>
